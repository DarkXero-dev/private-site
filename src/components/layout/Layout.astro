---
import '../../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Steve's personal vCard â€” tech fanatic, music lover, film enthusiast.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Steve (TechXero)" />
    <meta name="theme-color" content="#12141f" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://techxero.com" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600&family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <link rel="preload" href="/gradient.jpg" as="image" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Background -->
    <div class="bg-gradient" aria-hidden="true"></div>
    <div class="bg-overlay" aria-hidden="true"></div>

    <slot />
  </body>
</html>
