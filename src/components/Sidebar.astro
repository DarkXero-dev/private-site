// Left sidebar â€” full on desktop, compact header on mobile
---

<!-- Mobile header: logo + name + tagline only -->
<div class="md:hidden flex items-center gap-4 px-5 py-4 sidebar">
  <div class="w-14 h-14 rounded-full overflow-hidden border-2 border-[var(--color-accent-dim)] ring-2 ring-[var(--color-accent)] ring-offset-2 ring-offset-[var(--color-bg-body)] shrink-0">
    <img src="/logo.png" alt="TechXero" class="w-full h-full object-cover" loading="eager" />
  </div>
  <div>
    <h1 class="rgb-title font-[family-name:var(--font-heading)] text-lg font-bold">{'~{TechXero}~'}</h1>
    <p class="text-[var(--color-text-secondary)] text-xs">Steve (A.K.A DarkXero)</p>
  </div>
</div>

<!-- Desktop sidebar: full version -->
<aside class="sidebar hidden md:flex flex-col items-center px-6 py-8 gap-5 h-full">
  <!-- Avatar -->
  <div class="relative">
    <div class="w-28 h-28 rounded-full overflow-hidden border-2 border-[var(--color-accent-dim)] ring-2 ring-[var(--color-accent)] ring-offset-2 ring-offset-[var(--color-bg-body)]">
      <img
        src="/logo.png"
        alt="TechXero"
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>
  </div>

  <!-- Name -->
  <div class="text-center">
    <h1 class="rgb-title font-[family-name:var(--font-heading)] text-xl font-bold">
      {'~{TechXero}~'}
    </h1>
    <p class="text-[var(--color-text-secondary)] text-sm mt-1">Steve (A.K.A DarkXero)</p>
  </div>

  <!-- Quick Info -->
  <div class="flex flex-col gap-1.5 w-full text-xs text-[var(--color-text-muted)]">
    <div class="flex items-center gap-2">
      <svg class="w-3.5 h-3.5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      Lebanon
    </div>
    <div class="flex items-center gap-2">
      <svg class="w-3.5 h-3.5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
      <a href="mailto:info@techxero.com" class="hover:text-[var(--color-accent)] transition-colors">info@techxero.com</a>
    </div>
    <div class="flex items-center gap-2">
      <svg class="w-3.5 h-3.5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
      Tech Fanatic / Freelance
    </div>
  </div>

  <!-- Divider -->
  <div class="w-full h-px bg-[var(--color-border)]"></div>

  <!-- Socials -->
  <div class="flex flex-col w-full gap-0.5">
    <a href="https://github.com/DarkXero-dev" target="_blank" rel="noopener noreferrer" class="social-link">
      <svg class="w-4 h-4 social-icon" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>
      <span>GitHub</span>
    </a>
    <a href="https://mastodon.social/@TechXero" target="_blank" rel="noopener noreferrer" class="social-link">
      <svg class="w-4 h-4 social-icon" stroke="currentColor" fill="none" stroke-width="1.5" viewBox="0 0 24 24"><path d="M21.327 8.566c0-4.339-2.843-5.61-2.843-5.61-1.433-.658-3.894-.935-6.451-.956h-.063c-2.557.021-5.016.298-6.45.956 0 0-2.843 1.272-2.843 5.61 0 .993-.019 2.181.012 3.441.103 4.243.778 8.425 4.701 9.463 1.809.479 3.362.579 4.612.51 2.268-.126 3.541-.809 3.541-.809l-.075-1.646s-1.621.511-3.441.449c-1.804-.062-3.707-.194-3.999-2.409a4.523 4.523 0 0 1-.04-.621s1.77.432 4.014.535c1.372.063 2.658-.08 3.965-.236 2.506-.299 4.688-1.843 4.962-3.254.434-2.223.398-5.424.398-5.424zm-3.353 5.59h-2.081V9.057c0-1.075-.452-1.62-1.357-1.62-1 0-1.501.647-1.501 1.927v2.791h-2.069V9.364c0-1.28-.501-1.927-1.502-1.927-.904 0-1.357.546-1.357 1.62v5.099H6.026V8.903c0-1.074.273-1.927.823-2.558.566-.631 1.307-.955 2.228-.955 1.065 0 1.872.41 2.405 1.228l.518.869.519-.869c.533-.818 1.34-1.228 2.405-1.228.92 0 1.662.324 2.228.955.549.631.822 1.484.822 2.558v5.253z"/></svg>
      <span>Mastodon</span>
    </a>
    <a href="https://linkedin.com/in/schaanine" target="_blank" rel="noopener noreferrer" class="social-link">
      <svg class="w-4 h-4 social-icon" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
      <span>LinkedIn</span>
    </a>
    <a href="https://www.youtube.com/@TechXeroLB" target="_blank" rel="noopener noreferrer" class="social-link">
      <svg class="w-4 h-4 social-icon" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" stroke="none" fill="currentColor"/></svg>
      <span>YouTube</span>
    </a>
  </div>

  <!-- Divider -->
  <div class="w-full h-px bg-[var(--color-border)]"></div>

  <!-- XeroLinux Link -->
  <a href="https://xerolinux.xyz" target="_blank" rel="noopener noreferrer"
     class="text-xs text-[var(--color-text-muted)] hover:text-[var(--color-accent)] transition-colors font-[family-name:var(--font-mono)]">
    xerolinux.xyz &rarr;
  </a>
</aside>
